generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  discordId     String   @unique
  username      String
  discriminator String
  avatar        String?
  accessToken   String?
  refreshToken  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Guilds      Guild[]      @relation("UserGuilds")
  SlotConfigs SlotConfig[] // ðŸ‘ˆ Added back relation
}

model Guild {
  id        String   @id @default(cuid())
  guildId   String   @unique           // Discord guild ID
  name      String
  ownerId   String?
  owner     User?     @relation(fields: [ownerId], references: [id], name: "UserGuilds")

  slotConfig SlotConfig[]
  messages  DiscordMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SlotConfig {
  id         String  @id @default(cuid())
  guildId    String
  guild      Guild   @relation(fields: [guildId], references: [guildId]) // âœ… FIXED
  userId     String
  user       User    @relation(fields: [userId], references: [id])

  background String
  slotCount  Int
  slots      Slot[]

  messageId  String?
  channelId  String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, guildId])  // âœ… composite key used in upsert
}

model Slot {
  id           String     @id @default(cuid())
  position     Int
  emoji        String
  slotConfigId String
  slotConfig   SlotConfig @relation(fields: [slotConfigId], references: [id])

  @@unique([slotConfigId, position])
}

model DiscordMessage {
  id      String @id @default(cuid())
  guildId String
  guild   Guild  @relation(fields: [guildId], references: [id])

  channelId String
  messageId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([guildId, channelId])
}
