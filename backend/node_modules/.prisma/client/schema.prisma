// backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  discordId     String   @unique
  username      String
  discriminator String // ðŸ‘ˆ ADD THIS LINE
  avatar        String?
  accessToken   String?
  refreshToken  String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // A user may manage many guilds (owner/admin); optional relationship if you track it later
  Guilds Guild[] @relation("UserGuilds")
}

model Guild {
  id      String  @id @default(cuid())
  guildId String  @unique // Discord guild ID
  name    String
  ownerId String? // optional link to User
  owner   User?   @relation(fields: [ownerId], references: [id], name: "UserGuilds")

  // Current slot configuration reference
  slotConfig SlotConfig?

  // If you post/update a message in a channel for this guild, store it to update later
  messages DiscordMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SlotConfig {
  id      String @id @default(cuid())
  guildId String @unique
  guild   Guild  @relation(fields: [guildId], references: [id])

  // Global background GIF (one for all slots as per your rules)
  background String

  // Total slots (2..25 enforced in app; can also add @db.Check later if needed)
  slotCount Int

  slots Slot[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Slot {
  id           String     @id @default(cuid())
  position     Int // 0-based index
  emoji        String // emoji id or name
  slotConfigId String
  slotConfig   SlotConfig @relation(fields: [slotConfigId], references: [id])

  @@unique([slotConfigId, position]) // one entry per position per config
}

model DiscordMessage {
  id      String @id @default(cuid())
  guildId String
  guild   Guild  @relation(fields: [guildId], references: [id])

  channelId String // Discord channel ID
  messageId String // Discord message ID (to edit later)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([guildId, channelId]) // one tracked message per guild/channel
}
